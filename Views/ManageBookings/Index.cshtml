@model IEnumerable<GerGarage.Models.JobCardDetail>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
                <th>Service Date</th>
                <th>Customer Name</th>
                <th>Car Make</th>
                <th>Car Model</th>
                <th>Service Type</th>
                <th>Rate</th>
                <th>Mechanic Assigned</th>
                <th>Status</th>
     </tr>
            

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CarMake)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CarModel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MechanicAssigned)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobStatus)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.JobNumber }) |
            @Html.ActionLink("Print Invoice", "GenerateInvoice", new { id = item.JobNumber }) |
        </td>
    </tr>
}

</table>
